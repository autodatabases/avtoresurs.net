{% extends 'main/base.html' %}

{% load staticfiles %}

{% block title %}Список запчастей по категории {{ section.designation }}{% endblock %}

{% block content %}

    <div class="container">
        <!-- BREADCRUMBS -->
        <div class="row">
            <nav>
